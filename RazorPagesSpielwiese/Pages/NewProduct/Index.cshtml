<h3 class="text-primary mb-4">Add New Product</h3>

<form method="post" class="border p-4 rounded shadow-sm bg-light">

    <div class="mb-3">
        <label asp-for="NewProduct.ProductName" class="form-label"></label>
        <input asp-for="NewProduct.ProductName" class="form-control" />
        <span asp-validation-for="NewProduct.ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewProduct.Description" class="form-label"></label>
        <textarea asp-for="NewProduct.Description" class="form-control"></textarea>
        <span asp-validation-for="NewProduct.Description" class="text-danger"></span>
    </div>

    @if (Model.Categories.Count != 0)
    {
        <div class="mb-3">
            <label for="categories" class="form-label">Categories</label>
            <select id="categories" asp-for="NewProduct.CategoriyIdsFromSelect" class="form-select" multiple>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
            <span asp-validation-for="NewProduct.CategoriyIdsFromSelect" class="text-danger"></span>
            <small class="form-text text-muted">Hold Ctrl to select multiple categories</small>
        </div>
    }

    <div class="mb-3">
        <label asp-for="NewProduct.ProductPicture" class="form-label"></label>
        <input asp-for="NewProduct.ProductPicture" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NewProduct.Price" class="form-label"></label>
        <div class="input-group">
            <input asp-for="NewProduct.Price" class="form-control" aria-describedby="currency-symbol" />
            <span class="input-group-text" id="currency-symbol">€</span>
        </div>
        @* <input asp-for="NewProduct.Price" class="form-control" /> *@
        <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewProduct.AmountOnStock" class="form-label"></label>
        <input asp-for="NewProduct.AmountOnStock" class="form-control" />
        <span asp-validation-for="NewProduct.AmountOnStock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add New Product</button>
    @Html.AntiForgeryToken()
</form>