@page
@using RazorPagesSpielwiese.Models
@model NewProductModel
@{
    ViewData["Title"] = "New Product";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<h3>New Product</h3>

<form method="post">
    <div>
        <label asp-for="NewProduct.ProductName"></label>
        <input asp-for="NewProduct.ProductName" />
        <span asp-validation-for="NewProduct.ProductName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="NewProduct.Description"></label>
        <input asp-for="NewProduct.Description" />
    </div>
    <div>
        @* Hier mehrere Kategorien *@
        @* <label asp-for="NewProduct.CategoryFromSelect">Choose a category:</label>
        <select asp-for="NewProduct.CategoryFromSelect" asp-items="@Model.CategoriesForSelect" class="form-control">
            <option value="">-- Select a Category --</option>
        </select>        
        <span asp-validation-for="NewProduct.CategoryFromSelect" class="text-danger"></span> *@

        @* Categories *@
        <div class="mb-3">
            <label for="categories" class="form-label">Categories</label>

            <select id="categories" asp-for="NewProduct.CategoriyIdsFromSelect" class="form-select" multiple>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                    @* var productCategories = Model.Categories.Select(c => c.CategoryId);
                    if (productCategories.Contains(category.CategoryId))
                    {
                        <option value="@category.CategoryId" selected>@category.CategoryName</option>
                    }
                    else
                    {
                        <option value="@category.CategoryId">@category.CategoryName</option>
                    } *@
                }
            </select>

            <small class="form-text text-muted">Hold Ctrl to select multiple categories</small>
        </div>



    </div>
    <div>
        <label asp-for="NewProduct.ProductPicture"></label>
        <input asp-for="NewProduct.ProductPicture" />
    </div>

    @* Warum werden die letzten beiden Validation Error nicht mit dem Text aus dem ViewModel angezeigt? *@
    <div>
        <label asp-for="NewProduct.Price"></label>
        <input asp-for="NewProduct.Price" />
        <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="NewProduct.AmountOnStock"></label>
        <input asp-for="NewProduct.AmountOnStock" />
        <span asp-validation-for="NewProduct.AmountOnStock" class="text-danger"></span>
    </div>

    <button type="submit">Add new Product</button>
    @*Anti CSRF Token explizit bei Formularsubmits*@
    @Html.AntiForgeryToken()
</form>
