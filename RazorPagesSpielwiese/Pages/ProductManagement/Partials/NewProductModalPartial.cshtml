@model NewProductModalPartialModel1


@* <div class="modal fade" id="newProductModal" tabindex="-1" aria-labelledby="newProduct" aria-hidden="true">
    
</div> *@

<div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                New Product
            </h5>

            <form method="post" asp-page-handler="CloseModal">
                <button type="submit" class="btn-close" aria-label="Close"></button>
            </form>
        </div>
        <div class="modal-body">

            <h3 class="text-primary mb-4">Add New Product</h3>

            <form method="post" class="border p-4 rounded shadow-sm bg-light" asp-page-handler="Save">

                <div class="mb-3">
                    <label asp-for="@Model.ValidatedProduct.ProductName" class="form-label"></label>
                    <input asp-for="@Model.ValidatedProduct.ProductName" class="form-control" />
                    @* <span asp-validation-for="@Model.Product.ProductName" class="text-danger"></span> *@
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.ValidatedProduct.Description" class="form-label"></label>
                    <textarea asp-for="@Model.ValidatedProduct.Description" class="form-control"></textarea>
                    @* <span asp-validation-for="@Model.Product.Description" class="text-danger"></span> *@
                </div>


                @if (Model.Categories != null)
                {
                    <div class="mb-3">
                        <label asp-for="SelectedCategoryIds" class="form-label"></label>
                        <select asp-for="SelectedCategoryIds" class="form-select" multiple>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>

                            }
                        </select>
                        <small class="form-text text-muted">Hold Ctrl to select multiple categories</small>
                    </div>
                }



                <div class="mb-3">
                    <label asp-for="@Model.ValidatedProduct.ProductPicture" class="form-label"></label>
                    <input asp-for="@Model.ValidatedProduct.ProductPicture" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.ValidatedProduct.Price" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="@Model.ValidatedProduct.Price" class="form-control" aria-describedby="currency-symbol" />
                        <span class="input-group-text" id="currency-symbol">€</span>
                    </div>
                    @* <span asp-validation-for="@Model.Product.Price" class="text-danger"></span> *@
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.ValidatedProduct.AmountOnStock" class="form-label"></label>
                    <input asp-for="@Model.ValidatedProduct.AmountOnStock" class="form-control" />
                    @* <span asp-validation-for="@Model.Product.AmountOnStock" class="text-danger"></span> *@
                </div>

                <button type="submit" class="btn btn-success">Add New Product</button>
                @Html.AntiForgeryToken()
                
                
                
                @* <a class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Abbrechen</a> *@
                
            </form>
            <form method="post" asp-page-handler="CloseModal">
                <button type="submit" class="btn btn-primary">Dismiss</button>
            </form>
        </div>
    </div>
</div>