@model AlterProductModalPartialModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="modal fade" id="alterProductsModal-@Model.Product.ProductId" tabindex="-1" aria-labelledby="productDetail" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">
                    Product details
                </h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                 
                @* der Handler verweist auf die OnPostSave der Hauptseite *@
                <form method="post" asp-page-handler="Save">

                    <input type="hidden" name="ProductId" value="@Model.Product.ProductId" />
                        
                    
                    
                    <div class="mb-3">
                        <label for="productName" class="form-label">Produktname</label>
                        <input type="text" id="productName" name="ProductName" class="form-control" value="@Model.Product.ProductName" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Beschreibung</label>
                        <textarea id="description" name="Description" class="form-control">@Model.Product.Description</textarea>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Preis</label>
                        <input type="number" step="0.01" id="price" name="Price" class="form-control" value="@Model.Product.Price" />
                    </div>
                    <div class="mb-3">
                        <label for="amountOnStock" class="form-label">Lagerbestand</label>
                        <input type="number" id="amountOnStock" name="AmountOnStock" class="form-control" value="@Model.Product.AmountOnStock" />
                    </div>

                    @* Categories *@
                    <div class="mb-3">
                        <label for="categories" class="form-label">Categories</label>

                        <select id="categories" name="SelectedCategoryIds" class="form-select" multiple>
                            @foreach (var category in Model.Categories)
                            {
                                var productCategories = Model.Product.Categories.Select(c => c.CategoryId);
                                if (productCategories.Contains(category.CategoryId))
                                {
                                    <option value="@category.CategoryId" selected>@category.CategoryName</option>
                                }
                                else
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            }
                        </select>

                        <small class="form-text text-muted">Hold Ctrl to select multiple categories</small>
                    </div>


                    @* Discounts *@
                    <div class="mb-3">
                        <label class="form-label">Rabatte</label>

                        <!-- Leere Felder für neuen Rabatt -->
                        <div class="input-group mb-2">
                            <span class="input-group-text">Startdatum</span>
                            <input type="date" name="NewDiscount.StartDate" class="form-control" />

                            <span class="input-group-text">Enddatum</span>
                            <input type="date" name="NewDiscount.EndDate" class="form-control" />

                            <span class="input-group-text">Prozentsatz</span>
                            <input type="number" step="0.01" name="NewDiscount.Percentage" class="form-control" />
                            <span class="input-group-text">%</span>
                        </div>

                        @* @Model.Product.Discounts.OrderByDescending(d => d.StartDate); *@
                        @for (int i = 0; i < Model.Product.Discounts.Count; i++)
                        {
                            <div class="input-group mb-2">
                                <span class="input-group-text">Startdatum</span>
                                <input type="date" name="Discounts[@i].StartDate" class="form-control" value="@Model.Product.Discounts[i].StartDate.ToString("yyyy-MM-dd")" />

                                <span class="input-group-text">Enddatum</span>
                                <input type="date" name="Discounts[@i].EndDate" class="form-control" value="@Model.Product.Discounts[i].EndDate.ToString("yyyy-MM-dd")" />

                                <span class="input-group-text">Prozentsatz</span>
                                <input type="number" step="0.01" name="Discounts[@i].Percentage" class="form-control" value="@Model.Product.Discounts[i].DiscountPercentage" />
                                <span class="input-group-text">%</span>
                            </div>
                        }   
                    </div>

                    <button type="submit" class="btn btn-success">Speichern</button>
                    <a class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Abbrechen</a>


                </form>
                





            </div>
        </div>
    </div>
</div>

