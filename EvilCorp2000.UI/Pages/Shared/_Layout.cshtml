<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EvilCorp2000</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/customModal.css"/>
    @* <link rel="stylesheet" href="~/EvilCorp2000.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @* Platzhalter für css Style, der auf einzelnen Seiten befüllt wird, wenn eine Unterseite den Style nicht verwendet, wird kein Fehler ausgelöst *@
    @RenderSection("Styles", required: false)
</head>
<body>
    @* <div class="container"> *@
    <header class="evilcorp-header">
        <nav class="evilcorp-navbar">
            <div class="evilcorp-container">
                <div class="evilcorp-branding">                    
                    <a class="evilcorp-title" asp-area="" asp-page="/Index"><img src="~/images/evilcorp_header.png" alt="EvilCorp2000 Logo" class="evilcorp-logo" /></a>
                </div>

                

                <ul class="evilcorp-nav-links">
                    <li><a asp-page="/ShopView/Index">Shop</a></li>
                    
                    @if (User.Identity?.IsAuthenticated == true && User.Claims.Any(c => c.Type == "role" && c.Value == "CEOofDoom"))
                    {
                        <li><a asp-page="/ProductManagement/Index">Product Management</a></li>
                        <li><a asp-page="/UserManagement/ManageUsers">User Management</a></li>
                    }
                </ul>

                <div class="evilcorp-auth">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="evilcorp-user">Angemeldet als: @User.Identity.Name</span>
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="evilcorp-logout-btn">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="evilcorp-login-btn">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="evilcorp-footer">
        <div class="evilcorp-footer-container">
            &copy; 2025 - EvilCorp2000
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>